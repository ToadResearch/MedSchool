JWT_SHARED_SECRET=CpTvTthsGaubAYJ0CJKsaNO8U6rIkETQ

# A valid HS256 JWT generated by fhir_server/scripts/generate_jwt.sh
# Leave blank until you run the script, then paste the token here.
FHIR_BEARER_TOKEN=


# ──────────── Postgres ────────────
PGUSER=admin
PGPASSWORD=admin
PGDATABASE=hapi

# ──────────── Synthea sample bundles (R4) ────────────
# https://github.com/synthetichealth/synthea-sample-data/tree/main/downloads/latest
